<% layout('../layout/base') -%>
<% block('title', pageNameRu) -%>

<div class="row">
	<div class="col-ph-12">
		<div class="app-card">
			<div class="card-title clr">
				<div class="card-header">
					<h1>Редактирование <span>новости</span></h1>
				</div>
				<div class="panel-tools">
					<a data-tool="card-resize" class="tool-resize"></a>
				</div>
			</div>
			<div class="card-content">
				<form id="editNews">
					<div class="form-group d_n">
						<label>id</label>
						<input type="text" name="id" class="form-control" value="<%=news[0]._id %>">
					</div>
					<div class="form-group">
						<label>Название</label>
						<input type="text" name="name" class="form-control translit-input" placeholder="Название новости" value="<%=news[0].name.initial %>">
					</div>
					<div class="form-group">
						<label>URL</label>
						<input type="email" name="nameTrslt" class="form-control translit-output" placeholder="URL формируеться автоматически из название новости" value="<%=news[0].name.trslt %>" readonly>
					</div>
					<div class="form-group">
						<label>Категория</label>
						<select name="category" class="form-control">
							<option disabled>Выберите категорию</option>
							<% categories.forEach(function(category) { if(category.name.initial == news[0]._category[0].name.initial){ %>
        						<option value="<%=category._id %>" selected="selected"><%= category.name.initial %></option>
   						 	<% } else { %>
   						 		<option value="<%=category._id %>"><%= category.name.initial %></option>
   						 	<% }}); %>
						</select>
					</div>
					<div class="form-group">
						<label>Текст</label>
						<textarea name="description" cols="30" rows="10" class="form-control" placeholder="Текст новости"><%=news[0].description %></textarea>
					</div>
					<div class="form-group">
						<% if(news[0].publish == true){ %>
							<div class="checkbox"><input value="true" name="publish" id="checkbox" type="checkbox" checked="checked"><label for="checkbox"></label></div>
						<% }else{ %>
							<div class="checkbox"><input value="true" name="publish" id="checkbox" type="checkbox"><label for="checkbox"></label></div>
						<% } %>
						Опубликовать новость на сайте
					</div>
					<button class="btn btn-success" type="submit">Сохранить</button>
				</form>
			</div>
		</div>
	</div>
</div>