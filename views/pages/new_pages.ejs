<% layout('../layout/base') -%>
<% block('title', pageNameRu) -%>

<div class="row">
	<div class="col-ph-12">
		<div class="app-card">
			<div class="card-title clr">
				<div class="card-header">
					<h1>Создание новой <span>страницы</span></h1>
				</div>
				<div class="panel-tools">
					<a data-tool="card-resize" class="tool-resize"></a>
				</div>
			</div>
			<div class="card-content">
				<form id="newPage">
					<div class="form-group">
						<label>Название</label>
						<input type="text" name="name" class="form-control translit-input" placeholder="Название страницы">
					</div>
					<div class="form-group">
						<label>URL</label>
						<input type="email" name="nameTrslt" class="form-control translit-output" placeholder="URL формируеться автоматически из название страницы" readonly>
					</div>
					<div class="form-group">
						<label>Текст</label>
						<textarea name="description" cols="30" rows="10" class="form-control" placeholder="Текст страницы"></textarea>
					</div>
					<button class="btn btn-success" type="submit">Создать</button>
					<button class="btn" type="reset">Отчистить</button>
				</form>
			</div>
		</div>
	</div>
</div>