<% layout('../layout/base') -%>
<% block('title', pageNameRu) -%>

<div class="row">
	<div class="col-ph-12">
		<div class="app-card">
			<div class="card-title clr">
				<div class="card-header">
					<h1>Редактирование <span>страницы</span></h1>
				</div>
				<div class="panel-tools">
					<a data-tool="card-resize" class="tool-resize"></a>
				</div>
			</div>
			<div class="card-content">
				<form id="editPage">
					<div class="form-group d_n">
						<label>id</label>
						<input type="text" name="id" class="form-control" value="<%=page[0]._id %>">
					</div>
					<div class="form-group">
						<label>Название</label>
						<input type="text" name="name" class="form-control translit-input" placeholder="Название страницы" value="<%=page[0].name.initial %>">
					</div>
					<div class="form-group">
						<label>URL</label>
						<input type="email" name="nameTrslt" class="form-control translit-output" placeholder="URL формируеться автоматически из название страницы" value="<%=page[0].name.trslt %>" readonly>
					</div>
					<div class="form-group">
						<label>Текст</label>
						<textarea name="description" cols="30" rows="10" class="form-control" placeholder="Текст страницы"><%=page[0].description %></textarea>
					</div>
					<button class="btn btn-success" type="submit">Сохранить</button>
				</form>
			</div>
		</div>
	</div>
</div>