<% layout('../layout/base') -%>
<% block('title', pageNameRu) -%>


<div class="row">
	<div class="col-ph-12">
		<div class="app-card">
			<div class="card-title clr">
				<div class="card-header">
					<h1>Группы <span>пользователей</span></h1>
				</div>
				<div class="panel-tools">
					<a data-tool="card-resize" class="tool-resize"></a>
					<a data-tool="table-reload" class="tool-refresh" ></a>
					<a data-tool="trigger" class="tool-more"><span class="notifications"></span></a>
					<div class="tools-more">
						<a data-modal="add-usergroup" class="tool-add"></a>
						<a data-modal="edit-usergroup" data-tool="edit" class="tool-edit disabled"></a>
						<a data-modal="remove-usergroup" data-tool="remove" class="tool-remove disabled"></a>
					</div>
				</div>
			</div>
			<div class="card-content">
				<table class="app-table" table-name="usergroup">
					<thead>
						<tr>
							<th></th>
							<th>Название</th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="cd-modal" id="add-usergroup">
	<div class="cd-modal-container">
		<div class="cd-modal-title">
			<h4>
				Добавить <span>новую группу</span>
			</h4>
			<button class="cd-modal-close ion-close"></button>
		</div>
		<form>
			<div class="cd-modal-body">
				<div class="form-group">
					<label>Название</label>
					<input type="text" name="name" class="form-control" placeholder="Название новой группы">
				</div>
			</div>
			<div class="cd-modal-footer text-right">
				<button class="btn btn-success" type="submit">Добавить</button>
				<button class="btn" type="reset">Отчистить</button>
			</div>
		</form>
	</div>
</div>
<div class="cd-modal" id="remove-usergroup">
	<div class="cd-modal-container">
		<div class="cd-modal-title">
			<h4>
				Вы действительно хотите удалить<br> <span>выбранные записи?</span>
			</h4>
			<button class="cd-modal-close ion-close"></button>
		</div>
		<form id="usersRemove">
			<div class="cd-modal-footer text-center">
				<button class="btn btn-success" type="submit">Да</button>
				<button class="btn cd-modal-close">Нет</button>
			</div>
		</form>
	</div>
</div>
<div class="cd-modal" id="edit-usergroup">
	<div class="cd-modal-container">
		<div class="cd-modal-title">
			<h4>
				Редактирование <span>данных группы</span>
			</h4>
			<button class="cd-modal-close ion-close"></button>
		</div>
		<form id="users-edit">
			<div class="cd-modal-body">
				<div class="form-group hide">
					<label>ID</label>
					<input type="text" name="id" class="form-control">
				</div>
				<div class="form-group">
					<label>Название</label>
					<input type="text" name="name" class="form-control" placeholder="Название группы">
				</div>
			</div>
			<div class="cd-modal-footer text-center">
				<button class="btn btn-success" type="submit">Изменить</button>
				<button class="btn cd-modal-close" type="reset">Отмена</button>
			</div>
		</form>
	</div>
</div>