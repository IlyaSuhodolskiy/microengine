<% layout('../layout/base') -%>
<% block('title', pageNameRu) -%>


<script type="text/javascript" src="/micro/js/lib/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/micro/js/lib/ckeditor/config.js"></script>
<script type="text/javascript" src="/micro/js/lib/ckeditor/styles.js"></script>

<div class="row">
	<div class="col-ph-12">
		<div class="app-card">
			<div class="card-title clr">
				<div class="card-header">
					<h1>Создание <span>новости</span></h1>
				</div>
				<div class="panel-tools">
					<a data-tool="card-resize" class="tool-resize"></a>
				</div>
			</div>
			<div class="card-content">
				<form id="newNews">
					<div class="form-group">
						<label>Название</label>
						<input type="text" name="name" class="form-control translit-input" placeholder="Название новости">
					</div>
					<div class="form-group">
						<label>URL</label>
						<input type="email" name="nameTrslt" class="form-control translit-output" placeholder="URL формируеться автоматически из название новости" readonly>
					</div>
					<div class="form-group">
						<label>Категория</label>
						<select name="category" class="form-control">
							<option selected="selected">Выберите категорию</option>
							<% categories.forEach(function(category) { %>
        						<option value="<%= category._id %>"><%= category.name.initial %></option>
   						 	<% }); %>
						</select>
					</div>
					<div class="form-group">
						<label>Изображение краткой новости(URL)</label>
						<input type="type" name="image" class="form-control" placeholder="Изображение для краткой новости">
					</div>
					<div class="form-group">
						<label>Текст</label>
						<textarea name="description" cols="30" rows="10" class="form-control" id="ckeditor" placeholder="Текст новости"></textarea>
					</div>
					<div class="form-group">
						<div class="checkbox"><input value="true" name="publish" id="checkbox" type="checkbox"><label for="checkbox"></label></div>
						Опубликовать новость на сайте
					</div>
					<button class="btn btn-success" type="submit">Создать</button>
					<button class="btn" type="reset">Отчистить</button>
				</form>
			</div>
		</div>
	</div>
</div>


<script>CKEDITOR.replace( 'ckeditor' );</script>